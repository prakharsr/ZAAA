{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@aaman/main/*": [
        "app/admin/*",
        "app/components/*",
        "app/guards/*",
        "app/validators/*",
        "app/services/*",
        "app/models/*"
      ],
      "@aaman/accounts/*": ["app/accounts/*"],
      "@aaman/couser/*": ["app/co-users/*"],
      "@aaman/dir/*": ["app/directory/*"],
      "@aaman/invoice/*": ["app/invoice/*"],
      "@aaman/ratecard/*": ["app/rate-card/*"],
      "@aaman/receipts/*": ["app/receipts/*"],
      "@aaman/releaseorder/*": ["app/release-order/*"],
      "@aaman/superadmin/*": ["app/super-admin/*"]
    }
  }
}
